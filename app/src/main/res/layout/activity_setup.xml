<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/vf_steps"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Step 0: Welcome -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notif2TG"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="80dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forward all your push notifications to Telegram"
                    android:textSize="16sp"
                    android:textColor="?android:textColorSecondary"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="48dp" />

                <Button
                    android:id="@+id/btn_get_started"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Started" />
            </LinearLayout>
        </ScrollView>

        <!-- Step 1: Bot Token -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect your bot"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Open @BotFather in Telegram\n2. Send /newbot and follow the instructions\n3. Copy the token and paste it below"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bot Token"
                    android:layout_marginBottom="16dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bot_token"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_connect_bot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/ll_bot_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#E8F5E9"
                    android:padding="16dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Connected"
                        android:textColor="#2E7D32"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_bot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_next_to_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:enabled="false"
                    android:layout_marginTop="24dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Step 2: Connect Chat -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose destination"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_chat_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Where should notifications be forwarded?"
                    android:textSize="15sp"
                    android:layout_marginBottom="24dp" />

                <!-- Auto-detect section -->
                <Button
                    android:id="@+id/btn_auto_detect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-detect (recommended)"
                    android:layout_marginBottom="8dp" />

                <!-- Waiting state -->
                <LinearLayout
                    android:id="@+id/ll_waiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />
                    <TextView
                        android:id="@+id/tv_waiting_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="Waiting for a message..." />
                    <Button
                        android:id="@+id/btn_stop_polling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Chat found result -->
                <LinearLayout
                    android:id="@+id/ll_chat_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#E8F5E9"
                    android:padding="16dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Found:"
                        android:textColor="#2E7D32"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_chat_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:id="@+id/tv_chat_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#388E3C"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_manual_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Chat ID manually"
                    style="@style/Widget.Material3.Button.TextButton" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_manual_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chat ID"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_manual_chat_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_save_manual_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use this Chat ID"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_next_to_perms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:enabled="false"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Step 3: Permissions -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almost done!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grant these permissions so the app can read and forward notifications."
                    android:textSize="15sp"
                    android:layout_marginBottom="24dp" />

                <!-- Notification Access -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification Access"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tv_notif_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not granted"
                            android:textSize="13sp"
                            android:textColor="#B71C1C" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_notif_access"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grant"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <!-- Battery Optimization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Battery Optimization"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tv_battery_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not disabled"
                            android:textSize="13sp"
                            android:textColor="#B71C1C" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_battery_opt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disable"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/xiaomi_hint"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:padding="12dp"
                    android:background="#FFF8E1"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finish Setup" />
            </LinearLayout>
        </ScrollView>

        <!-- Step 4: Success -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“"
                    android:textSize="64sp"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="80dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You're all set!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <TextView
                    android:id="@+id/tv_success_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications will be forwarded to Telegram."
                    android:textSize="16sp"
                    android:textColor="?android:textColorSecondary"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="48dp" />

                <Button
                    android:id="@+id/btn_go_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open Dashboard" />
            </LinearLayout>
        </ScrollView>

    </ViewFlipper>
</FrameLayout>
